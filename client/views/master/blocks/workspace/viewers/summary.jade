.viewer(ng-show='storage.workspace.viewer==\'summary\'')
    .tools
        ul.left
            li: a.ftasks.pleni-site-summarize(title='Update summary information',ng-click='repositories.summarize()')
        ul.right
            li: a.fa.fa-trash(title='Remove from workspace',ng-click='repositories.remove()')
    dl
        dt(ng-repeat-start='(key,value) in viewers.document') {{key|pretty}}:
        dd(ng-repeat-end) {{value|render:key}}

