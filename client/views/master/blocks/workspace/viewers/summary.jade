.viewer(ng-show='storage.workspace.viewer==\'summary\'')
    h1 summary
    .tools
        ul
            li: a.fa.fa-rotate-right(title='Update summary information',ng-click='repositories.summarize()')
            li: a.fa.fa-trash(title='Remove from workspace',ng-click='repositories.remove()')
    dl
        dt(ng-repeat-start='(key,value) in viewers.summary') {{key|pretty}}:
        dd(ng-repeat-end) {{value|render:key}}

