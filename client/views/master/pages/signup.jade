.grid.full.last
    nav.menu
        include ../blocks/footer/bottom
    .main
        .messages
        section.signup
            h1 Sign up
            article.form.animate
                .body
                    form(ng-submit='signup()')
                        p
                            label Email
                            input(type='text',name='email',placeholder='Your email for sending confirmation',required,ng-model='email')
                        p
                            label Password
                            input(type='password',name='password',placeholder='Your super safe password',required,ng-model='password')
                        p
                            label Password confirmation
                            input(type='password',name='confirm',placeholder='Repeat your super safe password',required,ng-model='confirm')
                        .captcha
                            no-captcha(g-recaptcha-response='recaptcha',theme='light',control='noCaptchaControl',site-key='#{captcha}')
                        p.offset
                            input(type='hidden',name='_csrf',value='#{csrftoken}')
                            span.message
                                | By signing up you agree to the 
                                a(href='/#/pages/terms') Terms of Service
                        p.offset
                            span.message
                                | and the 
                                a(href='/#/pages/privacy') Privacy Policy.
                        p.offset
                            button(type='submit') Register

