.fluid.full.last
    nav.menu
        ul.items
            li.header(ng-click='repositories.empty()',ng-class='{\'active\':storage.workspace.visual==\'\'}')
                .title
                    a Project: {{storage.workspace.name}}
        ul.items
            li(ng-repeat='repository in storage.workspace.repositories',ng-class='{\'active\':storage.workspace.visual==storage.workspace.repositories[$index].name}')
                .title(ng-click='repositories.open($index)')
                    a {{repository.name|truncate:24}}
                    .right
                        a.fa.fa-spinner.fa-spin(ng-show='storage.workspace.repositories[$index].loading==true')
                            a.fa(title='{{repository.summary.type}} repository',ng-show='storage.workspace.repositores[$index].loading==false',ng-class='workspace.icon_r(repository.summary.type)')
                .options
                    ul
                        li: a(ng-click='repositories.summary($index)') summary
                        li: a(ng-click='repositories.report($index)') report
        include ../blocks/footer/bottom
    .main.last
        .tools
            ul.left
                li(title='Tasks/Planners configuration',ng-click='workspace.settings()')
                    a.fa.fa-gear
                li(title='Repository management',ng-click='workspace.repositories()')
                    a.fa.fa-database
                li(title='Refresh data from server',ng-click='workspace.init()')
                    a.fa.fa-refresh
            ul.left
                li(ng-repeat='(task,planners) in storage.workspace.enabled',title='{{task}} in {{planners.length}} planners',ng-click='tasks.open(task,planners)')
                    a.fa(ng-class='workspace.icon_p(task)')
                    small {{planners.length}}
            ul.right
                li(title='Close project workspace',ng-click='workspace.exit()')
                    a.fa.fa-close
        .messages
        .workspace.last
            include ../blocks/workspace/settings
            include ../blocks/workspace/repositories
            include ../blocks/workspace/tasks
            include ../blocks/workspace/viewers/summary
            include ../blocks/workspace/viewers/report
            #canvas
        include ../blocks/footer
