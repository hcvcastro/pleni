doctype html
html(lang='en')
    head
        title <~~ pleni
        link(rel='stylesheet',href='/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet',href='/bootstrap/dist/css/bootstrap-theme.min.css')
        link(rel='stylesheet',href='css/style.css')
    body(ng-app='PleniApp')
        header.navbar.navbar-inverse.navbar-fixed-top(role='banner')
            div.container
                div.navbar-header
                    button.navbar-toggle(type='button',data-toggle='collapse',data-target='.bs-navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/#/home') Pleni
                nav.collapse.navbar-collapse.bs-navbar-collapse(role='navigation')
                    ul.nav.navbar-nav
                        li: a(href='/#/repositories') Repositories
                        li: a(href='/#/planners') Planners
                    //- ul.nav.navbar-nav.navbar-right
        block content
            #wrapper(ng-view)
                block main
            br
        script(src='/jquery/dist/jquery.min.js')
        script(src='/bootstrap/dist/js/bootstrap.min.js')
        script(src='/bootstrap/js/transition.js')
        script(src='/angular/angular.js')
        script(src='/angular-route/angular-route.js')
        script(src='/angular-resource/angular-resource.js')
        script(src='/ngstorage/ngStorage.js')
        script(src='/js/app.js')
        script(src='http://localhost:35729/livereload.js')

