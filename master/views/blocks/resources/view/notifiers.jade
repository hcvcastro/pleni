article.view.animate(ng-show='notifiers.env.view==\'view\'')
    h2 {{notifier.id}} ({{notifier.notifier.host}}:{{notifier.notifier.port}})
    div.close
        a.fa.fa-close(ng-click='notifiers.list()')
    div
        form(ng-submit='notifiers.addplanner()')
            h3 Connected planners
            .item(ng-repeat='planner in notifier.planners')
                .body {{planner}}
                .close
                    a.fa.fa-trash(ng-click='notifiers.removeplanner($index)')
                .clearfix
            br
            h3 Connect a new planner
            p
                label &nbsp;
                select(required,ng-model='notifier.planner',ng-options='planner.id as planner.id for planner in storage.planners')
                    option(value='',selected='selected',disabled='disabled') Select a Planner
            p.offset
                button(type='submit') Add Planner
        p.offset
            span.hide.loader.fa.fa-spinner
            span.hide.message
    br

