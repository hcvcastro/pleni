article.list
    div.tasks
        ul
            li
                a.fa.fa-plus(ng-click='dbservers.add()') &nbsp;Add
            li
                a.fa.fa-refresh(ng-click='dbservers.refresh()') &nbsp;Refresh
        .clearfix
    table
        tr
            th Name
            th Host
            th Status
            th &nbsp;
        tr(ng-repeat='dbserver in storage.dbservers')
            td
                a(ng-click='dbservers.view($index)') {{dbserver.id}}
            td {{dbserver.db.host}}:{{dbserver.db.port}}
            td.center
                span.fa(ng-class='{\'fa-check\':dbserver.status==\'online\',\'fa-question\':dbserver.status==\'unknown\',\'fa-close\':dbserver.status==\'offline\'}')
            td.options
                a.fa.fa-refresh(title='Check connection',href='')
                a.fa.fa-edit(title='Edit properties',ng-click='dbservers.edit()')
                a.fa.fa-trash(title='Remove element',ng-click='dbservers.remove()')

