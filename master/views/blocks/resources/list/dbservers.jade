article
    h1 DB Servers
    div.tasks
        ul
            li
                a.fa.fa-plus-circle(href='') &nbsp;Add
            li
                a.fa.fa-refresh(ng-click='refresh_dbservers()') &nbsp;Refresh
        .clearfix
    table
        tr
            th Name
            th Host
            th Status
            th &nbsp;
        tr(ng-repeat='dbserver in dbservers')
            td: span {{dbserver.id}}
            td {{dbserver.db.host}}:{{dbserver.db.port}}
            td.status
                span.fa(ng-class='{\'fa-check\':dbserver.status==\'online\',\'fa-question\':dbserver.status==\'unknown\',\'fa-close\':dbserver.status==\'offline\'}')
            td.options
                a.fa.fa-refresh(title='Check connection',href='')
                a.fa.fa-edit(title='Edit properties',href='')
                a.fa.fa-trash(title='Remove element',href='')

