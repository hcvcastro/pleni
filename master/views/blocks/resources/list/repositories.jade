article.list
    div.tasks
        ul
            li(ng-click='repositories.add()')
                span.fa.fa-plus
                span Add Repository
            li(ng-click='repositories.refresh(1)')
                span.fa.fa-refresh
                span Refresh
        .clearfix
    table
        thead
            tr
                th Name
                th DB Server
                th DB Name
                th.status &nbsp;
                th.status &nbsp;
                th.options &nbsp;
        tbody
            tr(ng-repeat='repository in storage.repositories')
                td
                    span {{repository.id|truncate:16}}
                td {{repository._dbserver}}
                td {{repository.db.name|truncate:32}}
                td.status
                    span.fa(ng-class='{\'fa-cloud-download\':repository.type==\'site\'}')
                td.status
                    span.fa(title='Repository connection: {{repository.check}}',ng-class='{\'fa-check\':repository.check==\'online\',\'fa-question\':repository.check==\'unknown\',\'fa-close\':repository.check==\'offline\'}')
                td.options
                    a.fa.fa-refresh(title='Check connection',ng-click='repositories.check($index)',ng-class='{\'fa-spin\':repository.check==\'checking\'}')
                    a.fa.fa-edit(title='Edit properties',ng-click='repositories.edit($index)')
                    a.fa.fa-trash(title='Remove element',ng-click='repositories.remove($index)')

