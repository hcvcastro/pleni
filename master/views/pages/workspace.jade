.wrapper.full
    nav.menu
        ul.items
            li.active.header
                span Project: test
        ul.items
            li
                a pleni_site_test
            li
                a pleni_site_versioning
            li
                a pleni_common_drupal
        include ../blocks/footer/bottom
    .main
        .tools
            ul.left
                li
                    a.fa.fa-gear
                li
                    a.fa.fa-file-o
                li
                    a.fa.fa-files-o
                li
                    a.fa.fa-cloud-download
                li
                    a.fa.fa-trash
            ul.right
                li
                    a.fa.fa-close
        .messages
        .workspace
            article.form
                .title
                    h2 Workspace configuration
                .body
                    form(ng-submit='planners.save()')
                        p
                            label Name
                            input(type='text',placeholder='The name for the planner',required,ng-model='planner.id')
                        p
                            label Host
                            input(type='text',placeholder='The host or a IP of your planner',required,ng-model='planner.planner.host')
                        p
                            label Port
                            input(type='number',placeholder='The port for the planner',min=1,max=65535,required,ng-model='planner.planner.port')
                        p.offset
                            span.hide.loader.fa.fa-spinner.fa-spin
                            span.hide.message
                        p.offset
                            button(type='submit') Save
                            button(type='button',ng-click='planners.check()') Test
            svg.canvas

