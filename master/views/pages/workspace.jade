.wrapper.full
    nav.menu
        ul.items
            li.active.header
                span Project: test
        ul.items
            li
                a pleni_site_test
            li
                a pleni_site_versioning
            li
                a pleni_common_drupal
        include ../blocks/footer/bottom
    .main
        .tools
            ul.left
                li
                    a.fa.fa-gear
                li
                    a.fa.fa-file-o
                li
                    a.fa.fa-files-o
                li
                    a.fa.fa-cloud-download
                li
                    a.fa.fa-trash
            ul.right
                li
                    a.fa.fa-close(ng-click='workspace.close()',title='Close project workspace')
        .messages
        .workspace
            article.form
                .title
                    h2 Workspace configuration
                .body
                    form(ng-submit='workspace.apply()')
                        p.large You need set a planners for scanning the available tasks in your workspace.
                        p(ng-repeat='planner in storage.planners')
                            label {{planner.id}}
                            a.fa(title='Planner type: {{planner.type}}',ng-class='{\'fa-bullhorn\':planner.type==\'io\',\'fa-headphones\':planner.type==\'ion\',\'fa-microphone-slash\':planner.type==\'none\'}')
                            a.fa(title='Planner connection: {{planner.check}}',ng-class='{\'fa-check\':planner.check==\'online\',\'fa-question\':planner.check==\'unknown\',\'fa-close\':planner.check==\'offline\'}')
                            a.fa(title='Planner playing status: {{planner.status}}',ng-class='{\'fa-play\':planner.status==\'running\',\'fa-question\':planner.status==\'unknown\',\'fa-stop\':planner.status==\'stopped\'}')
                            a.fa(title='Planner setting status: {{planner.set.status}}',ng-class='{\'fa-circle\':planner.set.status==\'set\',\'fa-question\':planner.set.status==\'unknown\',\'fa-circle-o\':planner.set.status==\'unset\'}')
                    a(title='Add/Remove planner to master notifier',ng-click='planners.follow($index)',ng-show='planner.type==\'io\'||planner.type==\'ion\'')
                        span.fa(ng-class='{\'fa-bell-o\':planner.follow==true,\'fa-bell-slash-o\':planner.follow==false}')
                        p.offset
                            span.hide.loader.fa.fa-spinner.fa-spin
                            span.hide.message
                        p.offset
                            button(type='submit') Apply
                            button(type='button',ng-click='workspace.cancel()') Cancel
            svg.canvas

